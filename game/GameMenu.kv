<GameMenu>:    
    button_run: RunGameButton
    button_pause: PauseGameButton
    button_stop: StopGameButton
    button_resume: ResumeGameButton
    layout_run: LayoutRun
    layout_change: LayoutChange
    size_hint_y: 0  # чтобы в самом начале не рисовалась фигня
    RelativeLayout:
        id: LayoutRun
        background_color: 0, 0, 0, 0
        size_hint: (1.0, 1.0)
        Button:
            id: PauseGameButton
            background_color: 0, 0, 0, 0
 #           color: root.button_color_transparent
            canvas.before:
                Color:
                    rgba: root.button_color_transparent
                Line:
                    joint: 'round'
                    width: 20
                    points: [self.x+self.width*0.2, self.y+self.height*0.2, self.x+self.width*0.2, self.y+self.height*0.8]
                Line:
                    joint: 'round'
                    width: 20
                    points: [self.x+self.width*0.8, self.y+self.height*0.2, self.x+self.width*0.8, self.y + self.height*0.8]
        Button:
            id: StopGameButton
            background_color: 0, 0, 0, 0
#            color: root.button_color
            canvas.before:
                Color:
                    rgba: root.button_color_transparent
                Rectangle:
                    pos: (self.x + 0.2*self.width, self.y + 0.2*self.height)
                    size: (0.6*self.width, 0.6*self.height)
        Button:
            id: ResumeGameButton
            background_color: 0, 0, 0, 0
#            color: root.button_color
            canvas.before:
                Color:
                    rgba: root.button_color_transparent
                Line:
                    joint: 'round'
                    width: 20
                    close: 1
                    points: [self.x + self.width*0.2, self.y + self.height*0.2, self.x + self.width*0.2, self.y + self.height*0.8, self.x + self.width*0.75, self.y + self.height*0.5]
    
    RelativeLayout:
        id: LayoutChange
        size_hint: (1.0, 1.0)
        canvas.before:
            Color:
                rgba: root.menu_color
            Rectangle:
                pos: (0,0)
                size: (self.width, self.height)
        Button:
            id: RunGameButton
            background_color: 0, 0, 0, 0
#            color: root.button_color
            canvas.before:
                Color:
                    rgba: root.button_color_on_menu
                Line:
                    joint: 'round'
                    width: 20
                    close: 1
                    points: [self.x + self.width*0.2, self.y + self.height*0.2, self.x + self.width*0.2, self.y + self.height*0.8, self.x + self.width*0.75, self.y + self.height*0.5]
    